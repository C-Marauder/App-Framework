<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppItemTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/item_ripple</item>
    </style>


    <style name="AppDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:gravity">center</item>
        <item name="android:gradientRadius">8dp</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">8dp</item>
    </style>
    <style name="AppInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/c_hint_text_color</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/c_input_box</item>
        <item name="boxStrokeErrorColor">#FF7043</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>